{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "baseUrl": "./packages",
    "alwaysStrict": true,
    "jsx": "react",
    "noEmit": true,
    "noImplicitAny": false, // 'true' is desirable
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6", "dom", "es2018"]
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "packages/**/dist/*"
  ]
}
